<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox fx:id="mainBox" alignment="CENTER_LEFT" spacing="10" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.GameItemCuadriculaController">
    <ImageView fx:id="gameImage" fitHeight="200.0" fitWidth="320.0" onMouseClicked="#showGameDetails" />
        <HBox fx:id="gamePlatforms" prefHeight="0.0" prefWidth="200.0">
      <opaqueInsets>
         <Insets />
      </opaqueInsets>
      <padding>
         <Insets left="10.0" />
      </padding>
    </HBox>
        <Label fx:id="gameTitle" onMouseClicked="#showGameDetails">
      <font>
         <Font size="20.0" />
      </font>
      <padding>
         <Insets left="10.0" />
      </padding>
    </Label>
   <HBox />
   <GridPane>
     <columnConstraints>
       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
       <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
     </columnConstraints>
     <rowConstraints>
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
     </rowConstraints>
      <children>
          <Label fx:id="gameRating">
            <GridPane.margin>
               <Insets bottom="25.0" left="10.0" />
            </GridPane.margin>
          </Label>
         <ImageView fx:id="addButton" fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="1">
            <GridPane.margin>
               <Insets bottom="25.0" right="10.0" />
            </GridPane.margin>
         </ImageView>
      </children>
   </GridPane>
   <cursor>
      <Cursor fx:constant="HAND" />
   </cursor>

</VBox>
