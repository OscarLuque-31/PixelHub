<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<HBox alignment="CENTER_LEFT" prefHeight="70.0" style="-fx-background-color: #212E36;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.GameItemListaController">
   <children>
      <ImageView fx:id="gameImage" fitHeight="70.0" fitWidth="140.0" pickOnBounds="true" preserveRatio="true">
         <HBox.margin>
            <Insets right="30.0" />
         </HBox.margin></ImageView>
      <Label fx:id="gameTitle" minWidth="380.0" style="-fx-text-fill: FFFFFF;">
         <font>
            <Font size="20.0" />
         </font></Label>
      <HBox fx:id="gamePlatforms" alignment="CENTER_LEFT" minWidth="380.0" prefHeight="42.0" prefWidth="275.0">
         <HBox.margin>
            <Insets left="10.0" right="10.0" />
         </HBox.margin></HBox>
      <Label fx:id="gameRating" alignment="CENTER_RIGHT" contentDisplay="RIGHT" style="-fx-text-fill: #52A5E0;">
         <font>
            <Font size="20.0" />
         </font></Label>
   </children>
   <cursor>
      <Cursor fx:constant="HAND" />
   </cursor>
</HBox>
