                           <children>
                              <Text fx:id="descriptionText" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" />
                           </children>
                        </TextFlow>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox maxWidth="850.0" minWidth="850.0" prefWidth="850.0">
               <children>
                  <VBox>
                     <children>
                        <HBox prefWidth="300.0">
                           <children>
                              <HBox fx:id="gamePlatforms" />
                              <Label fx:id="gameRating" contentDisplay="RIGHT" textFill="#52a5e0" />
                           </children>
                        </HBox>
                        <Label contentDisplay="CENTER" prefHeight="18.0" prefWidth="300.0" text="DLC's" textFill="WHITE" />
                        <VBox fx:id="gameDLC" />
                     </children>
                  </VBox>
                  <VBox alignment="TOP_RIGHT">
                     <children>
                        <HBox alignment="CENTER">
                           <children>
                              <ImageView fx:id="previous" fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true" />
                              <Label text="ImÃ¡genes" textFill="WHITE" />
                              <ImageView fx:id="next" fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true" />
                           </children>
                        </HBox>
                        <ImageView fx:id="gameScreenshots" fitHeight="150.0" fitWidth="275.0" pickOnBounds="true" preserveRatio="true" />
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</HBox>
